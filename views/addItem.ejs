<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body class="flex-wrapper">
    <h1>Add Item</h1>

    <form action="/addItem" method="POST">
        <input type="text" name="itemName" id="itemName" placeholder="Item Name">
        <br>
        <!-- <input type="text" name="itemDescription" id="" placeholder="Item Description">
        <br> -->
        <input type="number" step="0.01" name="itemPrice" id="itemPrice" placeholder="Item Price">
        <br>
        <textarea type="text" name="itemLink" id="itemLink" placeholder="Item Link"></textarea>
        <br>
        <textarea type="text" name="itemImage" id = "itemImage" placeholder="Item Image URL"></textarea>
        <br>
        <br>
        <button type="submit">Add Item</button>
    </form>
    <br>
    <h2 style="text-align: center;">Or</h2>
    <br>
    <div style="text-align: center;">
        <input type="text" id="findItem" placeholder="Search Up an Item">
        <button id="findItemButton">Find Items</button>
    </div>

    <!-- We will will this div up with items and a button to 
     use JavaScript to fill in the contents above -->
    <div id="items">

    </div>

    <%- include('partials/footer') %>
    <script src="js/script.js"></script>
</body>
</html>